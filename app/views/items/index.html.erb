<h1>Items</h1>
<% if @items.present? %>
  <table>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Votes</th>
      <th>Actions</th>
    </tr>

    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, item %></td>
        <td><%= item.price %></td>
        <td>
          <%= item.votes_count %>
          <%= link_to '(+)', upvote_item_path(item) %>
          <%= link_to '(-)', downvote_item_path(item) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_item_path(item) %>
          <%= link_to 'X', item, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  No items
<% end %>
