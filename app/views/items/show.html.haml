%h1= @item.name
%p= link_to 'Edit item', edit_item_path(@item.id)
%ul
  %li
    Price: #{@item.price}
  %li
    Description: #{urls_to_links(urls_to_images(@item.description))}
  %li
    Real: #{@item.real}
  - if @item.real
    %li
      Weight: #{@item.weight}
  Images:
%ol
  - @item.images.each do |image|
    %li= clickable_thumb(image)
